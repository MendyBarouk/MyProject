<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.firstproject.mendy.myproject.controller.fragmentregister.SecondFragment">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/fragment_second_nameOfCompany_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location_city_black_24dp"
            android:drawableTint="@color/colorSecondary_text"
            android:hint="Name of company"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/fragment_second_typeOfCompany_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/fragment_second_logo_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_add_a_photo_24dp"
        android:layout_gravity="center"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/fragment_second_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:background="@color/colorAccent"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/colorIcons"
            android:textSize="18sp" />

        <Button
            android:id="@+id/fragment_second_previous_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:background="@color/colorAccent"
            android:text="previous"
            android:textAllCaps="false"
            android:textColor="@color/colorIcons"
            android:textSize="18sp" />
    </RelativeLayout>


</LinearLayout>