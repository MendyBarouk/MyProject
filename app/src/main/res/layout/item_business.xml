<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="5dp"
    android:background="@color/colorIcons"
    android:elevation="4dp">


    <TextView
        android:id="@+id/item_business_info_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@android:drawable/ic_menu_info_details"
        android:drawableTint="@color/colorAccent"
        android:elevation="1dp" />

    <ImageView
        android:id="@+id/item_business_logo_imageView"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toLeftOf="@id/item_business_info_textView"
        android:layout_toRightOf="@+id/item_business_logo_imageView"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_business_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Google"
                android:textColor="@color/colorPrimary_text"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_business_typeCompany_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Hotel"
                android:textColor="@color/colorSecondary_text"
                android:textSize="14sp"
                android:textStyle="italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_business_address_textView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Country, City"
            android:textColor="@color/colorSecondary_text" />
    </LinearLayout>

</RelativeLayout>